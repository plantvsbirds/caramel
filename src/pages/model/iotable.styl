@import './styles.styl'

.ioTable
  flex-shrink 0
  flex-grow 0
  width 45%

.ioItem
  .row
    display flex
    flex-direction row
    justify-content flex-start
    & > *:nth-child(1)
      margin 20px
    .ioInfo
      display flex
      align-items center
      .type
        color text-secondary
  .ioDesc
    margin -10px auto 20px auto
    padding-left 20px