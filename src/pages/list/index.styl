.head
  padding 5em
  text-align center

.col
  max-width 100%
  overflow hidden
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  position relative
  margin-top 1em
  
  &:after
    content ""
    width 28%
  .item
    flex-shrink 0
    margin 1em auto
    width 28%
    .title,
    .content
      cursor pointer
    .title
      margin 1em auto 0em auto
      font-weight 600
      &:hover
        color rgb(0, 122, 255)
    .content
      margin-top .5em