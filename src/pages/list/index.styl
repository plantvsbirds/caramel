@import '../../const.styl'

.col
  max-width 100%
  overflow hidden
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  position relative
  margin-top 1em
  transition .2s transform
  
  &:after
    content ""
    width 66%
  .item
    flex-shrink 0
    margin 1em auto
    width 28%
    min-width 300px;
    .title,
    .content
      cursor pointer
      padding-left .5em
    .title
      margin 1em auto 0em auto
      font-weight 600
      &:hover
        color rgb(0, 122, 255)
    .content
      margin-top .5em

@media screen and (max-width: 641px)
  .col .item
    width 100%