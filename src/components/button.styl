.btn
  display inline-block
  padding 0em .45em
  margin-right .8em
  box-sizing border-box
  height 1.4em
  min-width 4em
  line-height calc(1.4em - 2px)
  text-align center

  font-size 1em
  letter-spacing 0.02px
  font-weight 400
  text-transform uppercase

  border 1px solid #007AFF
  border-radius 2em
  color #007AFF
  background transparent
  cursor pointer
  user-select none

.main
  background #007AFF
  color #fff!important
  font-weight 600