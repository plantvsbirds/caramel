.btn
  display inline-block
  padding 0 1em
  margin-right .8em
  box-sizing border-box
  min-width 5em
  height 28px
  line-height 26px
  text-align center

  letter-spacing 0.02px
  font-weight 400
  text-transform uppercase

  border 1px solid #007AFF
  border-radius 2em
  color #007AFF
  background transparent
  cursor pointer
  user-select none

.main
  background #007AFF
  color #fff!important
  font-weight 600