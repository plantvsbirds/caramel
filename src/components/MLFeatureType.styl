.type
  background #4A4A4A

.big
  width 120px
  height 120px
  border-radius 24.31px
  &:before
    line-height 120px
    font-size 28px
.small
  width 50px
  height 50px
  border-radius 10px
  &:before
    line-height 50px
    font-size 15px

.pixelBuffer
.image
  background-image linear-gradient(-121deg, #3023AE 7%, #53A0FD 51%, #B4EC51 100%)

.content
  display block
  text-align center
  height 100%

.int64:before
  content "123"
  @extend .content
  color white
  font-family Monaco, monospace

.double:before
  @extend .int64:before
  content "0.02"

.dictionary:before
  @extend .int64:before
  content "{...}"
  font-size 0.7em

.string:before
  content "Abc"
  @extend .content
  color white
  font-family 'Hiragino Sans', 'Lucida Grande', 'Helvetica Neue', sans-serif
  font-weight 300

.multiArray:before
  content "[ .. ]"
  @extend .content
  color white